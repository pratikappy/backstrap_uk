{%- assign cn = 'social-profiles' -%}

<nav class="#{{ cn }}" role="list">
    {% if settings.social_facebook_link != blank %}        
        <a class="#{{ cn }}-item" href="{{ settings.social_facebook_link }}" aria-describedby="a11y-external-message" target="_blank" rel="noopener noreferrer">
            <span class="#{{ cn }}-item-icon">
                {% render 'icon', name: 'facebook' %}
            </span>
