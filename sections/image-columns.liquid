<link rel="stylesheet" href="{{ 'gallery-card.css' | asset_url }}" media="print" onload="this.media='all'">
<noscript>{{ 'gallery-card.css' | asset_url | stylesheet_tag }}</noscript>

{%- capture Content -%}
    <div class="#grid @container @columns:{{ section.settings.columns }} {% if section.settings.swipe_on_mobile %}@mobile-overlap{% else %}@mobile:columns:1{% endif %} @gap:{{ section.settings.gutter }}" style="--grid-row-gap: 1.5rem;">
        {% for block in section.blocks %}
            <div class="#column reveal-animate" style="--reveal-index: {{ forloop.index }}">
                {% render 'gallery-card',
                    text_spaced: 'lg',
                    link: block.settings.link,
                    image: block.settings.image,
                    image_size: section.settings.image_size,
                    image_resolution_div: section.settings.columns,
                    title: block.settings.heading,
                    subtitle: block.settings.text,
                    button: block.settings.button,
                    button_style: section.settings.button_style,
                    button_show_arrow: section.settings.button_show_arrow,
                    button_link: block.settings.link,
                    text_size: section.settings.text_size,
                    text_align: section.settings.text_align,
                    color_scheme: section.settings.color_scheme,
                    media_hover_zoom: section.settings.hover_zoom
                %}
            </div>
        {% endfor %}
    </div>
{%- endcapture -%}

{% render 'section-body',
  content: Content,
  spaced: true,
  container: false,
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  color_scheme: section.settings.color_scheme
%}

{% schema %}
    {
        "name": "Image columns",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subheading"
          },
          {
            "type": "header",
            "content": "Layout"
          },
          {
            "type": "range",
            "id": "columns",
            "min": 2,
            "max": 5,
            "step": 1,
            "default": 3,
            "label": "Columns"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "alt",
                "label": "Alternate"
              },
              {
                "value": "accent",
                "label": "Accent"
              },
              {
                "value": "invert",
                "label": "Inverted"
              }
            ],
            "default": "default",
            "label": "Color scheme"
          },
          {
            "type": "select",
            "id": "gutter",
            "label": "Space between images",
            "options": [
            {
               "value": "none",
               "label": "None"
            },
            {
               "value": "sm",
               "label": "Small"
            },
            {
               "value": "md",
               "label": "Medium"
            },
            {
               "value": "lg",
               "label": "Large"
            }
            ],
            "default": "md"
         },
          {
            "type": "checkbox",
            "id": "swipe_on_mobile",
            "default": true,
            "label": "Enable carousel on mobile",
            "info": "Note: swipe functionality not active in theme editor"
          },
          {
            "type": "header",
            "content": "Images"
          },
          {
            "type": "checkbox",
            "id": "hover_zoom",
            "default": true,
            "label": "Enable image zoom on hover"
          },
          {
            "type":"select",
            "id":"image_size",
            "options":[
              {
                "value":"square",
                "label":"t:sections.collection-list.settings.image_ratio.options__3.label"
              },
              {
                "value":"portrait",
                "label":"t:sections.collection-list.settings.image_ratio.options__2.label"
              },
              {
                "value":"landscape",
                "label":"Landscape"
              },
              {
                "value": "original",
                "label": "Original image size"
              }
            ],
            "default":"landscape",
            "label":"Style"
          },
          {
            "type": "select",
            "id": "text_size",
            "label": "Text size",
            "options": [
                {
                    "value": "xs",
                    "label": "Small"
                },
                {
                    "value": "sm",
                    "label": "Medium"
                },
                {
                    "value": "md",
                    "label": "Large"
                }
            ],
            "default": "sm"
          },
          {
            "type": "select",
            "id": "text_align",
            "label": "Alignment",
            "options": [
              {
                  "value": "left",
                  "label": "Left"
              },
              {
                  "value": "center",
                  "label": "Center"
              },
              {
                  "value": "right",
                  "label": "Right"
              }
            ],
            "default": "center"
          },
          {
            "type": "header",
            "content": "Button"
          },
          {
            "type": "select",
            "id": "button_style",
            "label": "Style",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "ghost",
                "label": "Outline"
              },
              {
                "value": "link",
                "label": "Link"
              }
            ],
            "default": "default"
          },
          {
            "type": "checkbox",
            "id": "button_show_arrow",
            "label": "Show arrow",
            "default": true
          }
        ],
        "blocks": [
            {
                "type": "column",
                "name": "Column",
                "settings": [
                    {
                        "type": "image_picker",
                        "id": "image",
                        "label": "Image"
                    },
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading",
                        "default": "Heading"
                    },
                    {
                        "type": "textarea",
                        "id": "text",
                        "label": "Text",
                        "default": "Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review."
                    },
                    {
                        "type": "text",
                        "id": "button",
                        "label": "Button text",
                        "default": "Button"
                    },
                    {
                        "type": "url",
                        "id": "link",
                        "label": "Link"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "Image columns",
                "category": "Image",
                "blocks": [
                    {
                        "type": "column"
                    },
                    {
                        "type": "column"
                    },
                    {
                        "type": "column"
                    }
                ]
            }
        ]
    }
{% endschema %}