{{ 'faq.css' | asset_url | stylesheet_tag }}

{% assign cn = '#faq' %}

{%- capture Content -%}
    <div class="reveal-animate">
        <div class="{{ cn }} @text-size:{{ section.settings.text_size }} {% if section.settings.highlight_active %}@active-highlight{% endif %} @width:{{ section.settings.width }}">
            {% for block in section.blocks %}
                <details class="{{ cn }}-item details-reset">
                    <summary class="{{ cn }}-item-heading">
                        {{ block.settings.heading }}
                        {% render 'icon', name: 'chevron-down'  %}
                    </summary>
                    <div class="{{ cn }}-item-content">
                        {{ block.settings.text }}
                    </div>
                </details>
            {% endfor %}
        </div>
    </div>
{%- endcapture -%}

{% render 'section-body',
  content: Content,
  spaced: true,
  container: true,
  title: section.settings.title,
  subtitle: section.settings.subtitle,
  color_scheme: section.settings.color_scheme
%}

{% schema %}
    {
        "name": "FAQ",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Heading",
            "default": "FAQ"
          },
          {
            "type": "text",
            "id": "subtitle",
            "label": "Subheading"
          },
          {
            "type": "select",
            "id": "width",
            "options": [
                {
                    "value": "normal",
                    "label": "Normal"
                },
                {
                    "value": "narrow",
                    "label": "Narrow"
                },
                {
                    "value": "x-narrow",
                    "label": "X-Narrow"
                }
            ],
            "label": "Width",
            "default": "x-narrow"
          },
          {
            "type": "select",
            "id": "color_scheme",
            "options": [
              {
                "value": "default",
                "label": "Default"
              },
              {
                "value": "alt",
                "label": "Alternate"
              },
              {
                "value": "accent",
                "label": "Accent"
              },
              {
                "value": "invert",
                "label": "Inverted"
              }
            ],
            "default": "default",
            "label": "Color scheme"
          },
          {
            "type": "checkbox",
            "id": "highlight_active",
            "label": "Highlight active tab",
            "default": true
          },
          {
            "type": "select",
            "id": "text_size",
            "label": "Text size",
            "options": [
                {
                    "value": "sm",
                    "label": "Small"
                },
                {
                    "value": "md",
                    "label": "Medium"
                },
                {
                    "value": "lg",
                    "label": "Large"
                }
            ],
            "default": "sm"
          }
        ],
        "blocks": [
            {
                "type": "question",
                "name": "Question",
                "settings": [
                    {
                        "type": "text",
                        "id": "heading",
                        "label": "Heading",
                        "default": "Frequently asked question"
                    },
                    {
                        "type": "richtext",
                        "id": "text",
                        "label": "Text",
                        "default": "<p>Pair text with an image to focus on your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
                    }
                ]
            }
        ],
        "presets": [
            {
                "name": "FAQ",
                "category": "Text",
                "blocks": [
                    {
                        "type": "question"
                    },
                    {
                        "type": "question"
                    },
                    {
                        "type": "question"
                    }
                ]
            }
        ]
    }
{% endschema %}