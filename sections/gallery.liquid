                  },
                  {
                     "value": "8",
                     "label": "66.6%"
                  },
                  {
                     "value": "9",
                     "label": "75%"
                  },
                  {
                     "value": "12",
                     "label": "100%"
                  }
               ],
               "default": "6"
            },
            {
               "type":"image_picker",
               "id":"image",
               "label":"Image"
            },
            {
               "type": "select",
               "id": "image_size",
               "options": [
                 {
                   "value": "original",
                   "label": "Original image size"
                 },
                 {
                   "value": "full",
                   "label": "Full height"
                 },
                 {
                   "value": "large",
                   "label": "Large (70%)"
                 },
                 {
                   "value": "medium",
                   "label": "Medium (60%)"
                 },
                 {
                   "value": "small",
                   "label": "Small (50%)"
                 }
