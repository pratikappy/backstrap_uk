                   "label": "Original image size"
                 },
                 {
                   "value": "full",
                   "label": "Full height"
                 },
                 {
                   "value": "large",
                   "label": "Large (70%)"
                 },
                 {
                   "value": "medium",
                   "label": "Medium (60%)"
                 },
                 {
                   "value": "small",
                   "label": "Small (50%)"
                 }
               ],
               "default": "large",
               "label": "Mobile image size"
             },
             
            {
               "type": "range",
               "id": "overlay",
               "label": "Overlay opacity",
               "unit": "%",
               "min": 0,
               "max": 90,
               "step": 5,
               "default": 0
            },
            {
               "type": "header",
               "content": "Contents"
            },
            {
               "type": "text",
               "id": "title",
               "label": "Heading",
               "default": "Gallery Title"
            },
            {
               "type": "richtext",
               "id": "subtitle",
               "label": "Subheading",
               "default": "<p>Gallery Subtitle</p>"
            },
            {
               "type": "select",
               "id": "color_scheme",
               "label": "Color scheme",
               "options": [
                  {
                     "value": "default",
                     "label": "Default"
                  },
                  {
