                  },
                  {
                     "value": "center-right",
                     "label": "Center right"
                  },
                  {
                     "value": "bottom-left",
                     "label": "Bottom left"
                  },
                  {
                     "value": "bottom-center",
                     "label": "Bottom center"
                  },
                  {
                     "value": "bottom-right",
                     "label": "Bottom right"
                  }
               ],
               "default": "center-center"
            }, 
            {
               "type": "header",
               "content": "Primary button"
            },
            {
               "type": "text",
               "id": "button",
               "label": "Primary button label",
               "default": "Shop Now"
            },
            {
