{%- assign position = section.settings.text_position | split: '-' -%}
{%- assign text_y = position[0] -%}
{%- assign text_x = position[1] -%}

{% capture Hero_Text %}
    {% render 'hero',
        blocks: section.blocks,
        color_scheme: section.settings.color_scheme,
        align: text_x,
        spaced: 'lg',
        size: section.settings.text_size,
        reveal_animation: true
    %}
{% endcapture %}

{% capture Caption %}
    {% render 'floating-content',
        content: Hero_Text,
        x: text_x,
        y: text_y,
        padded: true,
        absolute: true
    %}
{% endcapture %}

{%- capture Content -%}
  <div data-main-header-overlap>
    {% render 'media',
        image: section.settings.image,
        mobile_image: section.settings.mobile_image,
        size: section.settings.image_size,
        mobile_size: section.settings.mobile_size,
        content: Caption,
        color_scheme: section.settings.color_scheme,
        overlay: section.settings.overlay,
        placeholder: 'lifestyle',
        reveal_zoom: true
    %}
  </div>
{%- endcapture -%}

{% render 'section-body',
  content: Content
%}

