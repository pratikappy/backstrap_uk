    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Background mobile image (optional)"
    },
    {
      "type": "select",
      "id": "image_mobile_size",
      "label": "Size",
      "options": [
        {
          "value": "large",
          "label": "Large (70%)"
        },
        {
          "value": "medium",
          "label": "Medium (60%)"
        },
        {
          "value": "small",
